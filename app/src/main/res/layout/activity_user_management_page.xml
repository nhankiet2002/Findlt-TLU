<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Title-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sys_manager"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="10dp"/>

    <!--    Navigation Bar for User Administration Page-->
    <LinearLayout
        android:id="@+id/navigation_bar_sys_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_arrow_back_left" />

        <TextView
            android:textColor="#1D1B20"
            android:textSize="22sp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/user"
            />
    </LinearLayout>

    <!--    Search User Dashboard-->
    <LinearLayout
        android:id="@+id/search_user_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="3dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/navigation_bar_sys_user"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_border_background_light">
        <EditText
            android:id="@+id/edt_search_user_dashboard"
            android:textColor="#B3B3B3"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:hint="@string/search_user"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_icon_search_user_dashboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_search"
            android:tint="@color/light_gray"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <!--User List-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_user_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <!-- LinearLayout to hold user items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--User 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/user0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="104dp"
                        tools:text="Nguyen Van A"
                        />
                    <TextView
                        android:id="@+id/email"
                        android:textColor="@color/light_gray"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        tools:text="nguyenvana@gmail.com"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:background="@drawable/s00000040sw1cr12bffffff"
                            android:padding="7dp"
                            android:text="@string/admin"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_active"
                            android:textColor="#2E9364"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@drawable/cr12bc9eac6"
                            android:text="@string/active"
                            android:padding="7dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/custom_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@null"
                    app:trackTint="@null"
                    android:layout_marginTop="30dp"
                    android:thumb="@drawable/switch_thumb_selector"
                    app:track="@drawable/switch_track_selector"
                    android:checked="true"
                    />
            </LinearLayout>


            <!--User 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name1"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="104dp"
                        tools:text="Nguyen Van A"
                        />
                    <TextView
                        android:id="@+id/email1"
                        android:textColor="@color/light_gray"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        tools:text="nguyenvana@gmail.com"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/role1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/admin"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="7dp"
                            android:layout_marginEnd="11dp"
                            android:background="@drawable/s00000040sw1cr12bffffff"/>

                        <TextView
                            android:id="@+id/user_active1"
                            android:textColor="@color/locked"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@drawable/cr12beac6c6"
                            android:text="@string/locked"
                            android:padding="7dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/custom_switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@null"
                    app:trackTint="@null"
                    android:layout_marginTop="30dp"
                    android:thumb="@drawable/switch_thumb_selector"
                    app:track="@drawable/switch_track_selector"
                    android:checked="false"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_see_more_dashboard"
        android:text="@string/see_more"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:background="@drawable/button_see_more"
        app:backgroundTint="@null"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


