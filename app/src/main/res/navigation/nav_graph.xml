<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cse441.tluprojectexpo.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <!-- Các actions khác của HomeFragment nếu có -->
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.cse441.tluprojectexpo.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_createFragment_for_edit"
            app:destination="@id/createFragment" />
        <!-- Các actions khác của ProfileFragment nếu có -->
        <!-- Ví dụ, nếu bạn có action từ Profile về Home:
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        -->
    </fragment>

    <fragment
        android:id="@+id/createFragment"
        android:name="com.cse441.tluprojectexpo.fragment.CreateFragment"
        android:label="fragment_create"
        tools:layout="@layout/fragment_create" >
        <argument
            android:name="projectIdToEdit"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Các fragments khác -->

</navigation>